{
  "name": "solfeggio",
  "version": "0.1.0",
  "main": "lib/index.js",
  "author": {
    "email": "polv@polv.cc",
    "name": "Pacharapol Withayasakpunt",
    "url": "https://www.polv.cc"
  },
  "homepage": "https://github.com/patarapolw/solfeggio",
  "repository": {
    "type": "git",
    "url": "https://github.com/patarapolw/solfeggio.git"
  },
  "license": "MIT",
  "files": [
    "lib",
    "server",
    "public"
  ],
  "scripts": {
    "start": "electron .",
    "prebuild": "node prebuild.js && yarn",
    "build": "yarn build:server && yarn build:web",
    "build:server": "export _PWD=$PWD && cd ../server && tsc -P src/tsconfig.json --outDir $_PWD/server",
    "build:web": "export _PWD=$PWD && cd ../vite && yarn vite build --outDir $_PWD/public",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "better-sqlite3": "^7.4.3",
    "cross-port-killer": "^1.3.0",
    "death": "^1.1.0",
    "electron-context-menu": "^3.1.1",
    "fastify": "^3.20.1",
    "fastify-static": "^4.2.2",
    "fastify-swagger": "^4.8.4"
  },
  "devDependencies": {
    "@types/node": "^16.4.12",
    "electron": "^13.1.8",
    "electron-builder": "^22.11.7",
    "import-sort-parser-typescript": "^6.0.0",
    "typescript": "^4.3.5"
  },
  "importSort": {
    ".js, .ts": {
      "parser": "typescript",
      "style": "module"
    }
  },
  "config": {
    "serverPort": "10522"
  }
}
